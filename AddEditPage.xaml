<Page x:Class="AutoServiceЯковлев.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoServiceЯковлев"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" FontFamily="Tw Cen MT">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название" FontSize="15" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Text="Стоимость" FontSize="15" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Text="Длительность" FontSize="15" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Text="Скидка" FontSize="15" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Height="30" Text="{Binding Title}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" Height="30" Width="200" HorizontalAlignment="Left" Text="{Binding Cost}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Height="30" Width="200" HorizontalAlignment="Left" Text="{Binding Duration}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="3" Height="30" Width="200" HorizontalAlignment="Left" Text="{Binding Discount}"></TextBox>
        <Button Name="SaveButtom" Content="Сохранить" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Click="SaveButton_Click"></Button>
    </Grid>
</Page>
